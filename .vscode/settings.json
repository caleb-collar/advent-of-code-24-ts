{
  "deno.enable": true,
  "deno.lint": true,
  "editor.formatOnSave": true,
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno",
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.rulers": [80],
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "deno.suggest.imports.hosts": {
    "https://deno.land": true
  }
}
